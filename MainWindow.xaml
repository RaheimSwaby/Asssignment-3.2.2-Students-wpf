<Window x:Class="student_proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:student_proj"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="StudentDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Button x:Name="AddStudentButton" Content="Add Student" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" Click="AddStudent_Click" Margin="330,100,0,0"/>
        <Button x:Name="RemoveStudentButton" Content="Remove Student/Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Click="RemoveStudent_Click" Margin="280,282,0,0"/>
    </Grid>
</Window>
